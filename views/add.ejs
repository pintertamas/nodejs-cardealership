<h2 class="d-flex justify-content-center" style="margin-top: 50px">Write here the new car's details</h2>
<hr style="width: 30%">
<h1></h1>
<div>
    <form action="/admin/addcar" method="post" class="custom-form" enctype="multipart/form-data">
        <% if (typeof(error) !== 'undefined') { %>
            <div class="alert alert-danger">
                <%= error %>
            </div>
        <% } %>
        <div class="input-group">
            <div class="custom-file">
                <input type="file" class="custom-file-input" id="file" name="file" aria-describedby="file">
                <label class="custom-file-label" for="file" style="color: grey">Upload an image of the car</label>
            </div>
        </div>
        <div class="form-group">
            <label for="brand"></label><input type="text" class="form-control" id="brand" name="brand" placeholder="Model name">
        </div>
        <div class="form-group">
            <label for="year"></label><input type="text" class="form-control" id="year" name="year" placeholder="Year">
        </div>
        <div class="form-group">
            <label for="mileage"></label><input type="text" class="form-control" id="mileage" name="mileage" placeholder="Mileage (km)">
        </div>
        <div class="form-group">
            <label for="price"></label><input type="text" class="form-control" id="price" name="price" placeholder="Price (â‚¬)">
        </div>
        <div class="form-group">
            <label for="description"></label><input type="text" class="form-control" id="description" name="description" placeholder="Description">
        </div>
    <div>
        <input type="submit" value="Add car" class="btn btn-dark" style="margin-left: auto; width: 100%; text-decoration: none">
    </div>
    </form>
</div>
