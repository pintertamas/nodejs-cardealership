<table class="table table-hover table-dark">
    <thead>
    <tr>
        <th scope="col">Car ID</th>
        <th scope="col">Buyer</th>
        <th scope="col">Model</th>
        <th scope="col">Mileage (km)</th>
        <th scope="col">Price (â‚¬)</th>
        <th scope="col">Options</th>
    </tr>
    </thead>
    <tbody>
    <% soldcars.forEach(function(soldCar) { %>
        <tr>
            <td>
                <%= soldCar._id %>
            </td>
            <td>
                <%= soldCar._owner %>
            </td>
            <td>
                <%= soldCar.brand %>
            </td>
            <td>
                <%= soldCar.mileage %>
            </td>
            <td>
                <%= soldCar.price %>
            </td>
            <td>
                <a href="/admin/delete/<%= soldCar._id %>">
                    <button class="button btn btn-sm btn-danger"><i class="fas fa-trash-alt"></i></button>
                </a>
            </td>
        </tr>
    <% }); %>
    </tbody>
</table>
