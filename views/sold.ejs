<%- include('headerAdmin') -%>
<nav class="navbar navbar-expand-sm navbar-custom">
    <a href="/" class="navbar-brand">Home</a>
    <div class="navbar-collapse collapse" id="navbarCustom">
        <ul class="navbar-nav">
            <li class="nav-item">
                <a class="nav-link" href="/admin/carList">Car List</a>
            </li>
            <li class="nav-item active">
                <a class="nav-link" href="/admin/soldCars">Sold Cars</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="/admin/addCar">Add Car</a>
            </li>
        </ul>
        <a class="ml-auto navbar-text nav-link" href="/logout">Log out</a>
    </div>
</nav>

<table class="table table-hover table-dark">
    <thead>
    <tr>
        <th scope="col">#</th>
        <th scope="col">Owner</th>
        <th scope="col">Model</th>
        <th scope="col">Year</th>
        <th scope="col">Mileage (km)</th>
        <th scope="col">Price (€)</th>
        <th scope="col">Options</th>
    </tr>
    </thead>
    <tbody>
    <% var number = 1; %>
    <% soldcars.forEach(function(soldCar) { %>
            <tr>
            <td>
                <%= number++ %>
            </td>
            <td>
                <!-- ide kellene írni a leendő tulajdonos email címét -->
                <%= soldCar._owner.email %>
            </td>
            <td>
                <%= soldCar.brand %>
            </td>
            <td>
                <%= soldCar.year %>
            </td>
            <td>
                <%= soldCar.mileage %>
            </td>
            <td>
                <%= soldCar.price %>
            </td>
            <td>
                <a href="/admin/delete/<%= soldCar._id %>">
                    <button class="button btn btn-sm btn-danger"><i class="fas fa-trash-alt"></i></button>
                </a>
            </td>
        </tr>
    <% }); %>
    </tbody>
</table>
<%- include('footer') -%>