<%- include('headerAdmin') -%>
<%- include('menuAdmin') -%>
<table class="table table-hover table-dark table-sm">
    <thead>
    <tr>
        <th scope="col">#</th>
        <th scope="col">Model</th>
        <th scope="col">Year</th>
        <th scope="col">Mileage (km)</th>
        <th scope="col">Price (â‚¬)</th>
        <th scope="col">Options</th>
    </tr>
    </thead>
    <tbody>
    <% var number = 1; %>
    <% cars.forEach(function(cars) { %>
        <tr>
            <th scope="row">
                <%= number++ %>
            </th>
            <td>
                <%= cars.brand %>
            </td>
            <td>
                <%= cars.year %>
            </td>
            <td>
                <%= cars.mileage %>
            </td>
            <td>
                <%= cars.price %>
            </td>
            <td>
                <a href="/admin/edit/<%= cars._id %>" style="text-decoration: none">
                    <button class="button btn btn-sm btn-primary"><i class="fas fa-edit"></i></button>
                </a>
                <a href="/admin/delete/<%= cars._id %>">
                    <button class="button btn btn-sm btn-danger"><i class="fas fa-trash-alt"></i></button>
                </a>
            </td>
        </tr>
    <% }); %>
    </tbody>
</table>
<%- include('footer') -%>
